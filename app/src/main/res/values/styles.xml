<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="email_password">
        <item name="android:textColor">#B8B8B8</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginStart">30dp</item>

    </style>

    <style name="sign_up">
        <item name="android:fontFamily">@font/alata</item>
        <item name="android:textColor">#B8B8B8</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="email_background">
        <item name="android:layout_width">367dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/ic_emailbackgroundborder</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>


    <style name="white_background">
        <item name="android:layout_width">367dp</item>
        <item name="android:textColor">#192F42</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/ic_whitebg</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="singIn_singUp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/alata</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="password" parent="email_background">
        <item name="android:foregroundGravity">center</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:hint">"Password"</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="email" parent="email_background">
        <item name="android:foregroundGravity">center</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:hint">"Email"</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_signinbackground</item>
        <item name="android:backgroundTint">#E96E41</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="profileImage">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:layout_marginBottom">9dp</item>
    </style>

    <style name="dialog_no_button">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dialog_yes_button">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">#192F42</item>
    </style>

</resources>